doctype html 
html 
    head 
        meta(charset='utf-8')
        link(href="/public/styles.css" rel="stylesheet")
        link(rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous")
        title= "Lista Productos con Pug"

body 
   div.container-fluid
        div.card
            div.card-header.text-white.bg-primary= "Productos"
            div.card-body
                if productos && productos.length > 0
                    table.table.table-dark
                        thead
                            th(scope="col") Nombre 
                            th(scope="col") Precio 
                            th(scope="col") Foto 
                        tbody
                            each producto in productos
                                tr
                                    td= producto.title 
                                    td= producto.price 
                                    if producto.thumbnail 
                                        td 
                                            img(src=''+producto.thumbnail alt='foto' style='width:50px; height:50px;')
                                    else
                                        td
                else
                    div.alert.alert-warning(role="alert")="No se encontraron productos"

    
                   
            