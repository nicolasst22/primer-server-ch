<div class="container-fluid">
    <div id="chats">
        <div class="container-fluid">
            <div class="card">
                <div class="card-header text-white bg-primary">
                    Login
                </div>
                <div class="card-body">
                    {{#if error}}
                    <div class="alert alert-danger">{{error}}</div>
                    {{/if}}
                    <form class="form-horizontal" method="POST" action="/login">
                        <div class="form-group row">
                            <input required placeholder="Ingrese su email" class="form-control col-6" type="text"
                                name="username" />
                        </div>
                        <div class="form-group row">
                            <input required placeholder="Ingrese su contraseÃ±a" class="form-control col-6" type="text"
                                name="password" />
                        </div>
                        <div class="form-group row" style="display: inline-block">
                            <input class="btn btn-success" type="submit" name="enviar" value="Ingresar">
                            <a class="btn btn-primary" href="/registro">Registrarse</a>
                            <a class="btn facebookBtn" href="/auth/facebook">
                                <div class="facebookBtn-logo">
                                    <div class="logo">
                                        <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32"
                                            viewBox="0 0 32 32" version="1">
                                            <path fill="#FFFFFF"
                                                d="M32 30a2 2 0 0 1-2 2H2a2 2 0 0 1-2-2V2a2 2 0 0 1 2-2h28a2 2 0 0 1 2 2v28z">
                                            </path>
                                            <path fill="#4267b2"
                                                d="M22 32V20h4l1-5h-5v-2c0-2 1.002-3 3-3h2V5h-4c-3.675 0-6 2.881-6 7v3h-4v5h4v12h5z">
                                            </path>
                                        </svg>
                                    </div>
                                    <p> Entrar con Facebook</p>
                                </div>

                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>